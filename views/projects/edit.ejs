<% layout('layouts/boilerplate') %>

<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="card shadow">
      <div class="card-body">
        <h1 class="text-center mb-4">Edit Project</h1>
        <form action="/projects/<%= project._id %>?_method=PUT" method="POST" class="validated-form" novalidate>
          <div class="mb-3">
            <label class="form-label" for="projectName">Project Name</label>
            <input class="form-control" type="text" id="projectName" name="project[projectName]" value="<%= project.projectName %>" readonly>
            <small class="text-muted">Project name cannot be edited</small>
          </div>
          
          <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea class="form-control" id="description" name="project[description]" rows="3" required><%= project.description %></textarea>
            <div class="invalid-feedback">
              Description is required
            </div>
          </div>
          
          <div class="mb-3">
            <label class="form-label" for="deadline">Deadline</label>
            <input class="form-control" type="date" id="deadline" name="project[deadline]" value="<%= project.deadline.toISOString().split('T')[0] %>" required>
            <div class="invalid-feedback">
              Deadline is required
            </div>
          </div>
          
          <div class="mb-3">
            <label class="form-label" for="status">Status</label>
            <select class="form-select" id="status" name="project[status]" required>
              <option value="Not Started" <%= project.status === 'Not Started' ? 'selected' : '' %>>Not Started</option>
              <option value="In Progress" <%= project.status === 'In Progress' ? 'selected' : '' %>>In Progress</option>
              <option value="Completed" <%= project.status === 'Completed' ? 'selected' : '' %>>Completed</option>
            </select>
            <div class="invalid-feedback">
              Status is required
            </div>
          </div>
          
          <div class="mb-3">
            <label class="form-label" for="teamMembers">Team Members (comma-separated)</label>
            <input class="form-control" type="text" id="teamMembers" name="project[teamMembers]" value="<%= project.teamMembers %>" required>
            <div class="invalid-feedback">
              At least one team member is required
            </div>
          </div>
          
          <div class="d-grid">
            <button class="btn btn-success">Update Project</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
