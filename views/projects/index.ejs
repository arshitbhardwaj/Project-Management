<% layout('layouts/boilerplate') %>

<h1>All Projects</h1>

<div class="mb-3">
  <a href="/projects/new" class="btn btn-primary">Add New Project</a>
</div>

<% if(projects.length === 0) { %>
  <div class="alert alert-info">No projects found. Create a new one!</div>
<% } else { %>
  <div class="row">
    <% projects.forEach(project => { %>
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= project.projectName %></h5>
            <h6 class="card-subtitle mb-2 text-muted">Status: <%= project.status %></h6>
            <p class="card-text"><%= project.description.substring(0, 100) %>...</p>
            <p class="card-text">
              <small class="text-muted">
                Deadline: <%= project.deadline.toLocaleDateString() %>
              </small>
            </p>
            <a href="/projects/<%= project._id %>" class="btn btn-primary">View Details</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
<% } %>
